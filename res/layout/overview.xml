<?xml version="1.0" encoding="utf-8"?>

<TableLayout
		android:id="@+id/widget38"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:background="@drawable/bg_white"
		xmlns:android="http://schemas.android.com/apk/res/android"
	>
	<TextView
		android:id="@+id/abHeader"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Account balance"
		android:textColor="#2E3235"
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingTop="2dp"
		android:background="@drawable/divider_gray"
		></TextView>
	<ProgressBar
		android:id="@+id/abProgressBar"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		style="?android:attr/progressBarStyleHorizontal"></ProgressBar>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/abBalance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Total income: €1000"
			android:textColor="#2E3235"
			android:textSize="12dp"
			android:textStyle="normal"
			android:paddingTop="2dp"
			android:paddingLeft="5dp"
			android:gravity="left">
		</TextView>
		<TextView
			android:id="@+id/abBalanceRemaining"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#2E3235"
			android:text="Income left: €300"
			android:textSize="12dp"
			android:paddingTop="2dp"
			android:paddingRight="5dp"
			android:gravity="right">
		</TextView>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/abBalanceSpent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#2E3235"
			android:text="Total expenses: €700"
			android:textSize="12dp"
			android:paddingTop="2dp"
			android:paddingLeft= "5dp"
			android:gravity="left">
		</TextView>
		<TextView
			android:id="@+id/abBalanceRate"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#2E3235"
			android:text="Spend rate per day: €11.65"
			android:textSize="12dp"
			android:paddingTop="2dp"
			android:paddingRight="5dp"
			android:gravity="right">
		</TextView>
	</LinearLayout>
	
	<TextView
		android:id="@+id/mbHeader"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Monthly Expenses"
		android:textColor="#2E3235"
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingTop="7dp"
	>
	</TextView>
	<ProgressBar
		android:id="@+id/mbProgressBar"
		android:paddingLeft="5dp"
		android:paddingRight="5dp"
		style="?android:attr/progressBarStyleHorizontal"></ProgressBar>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/mbBalance"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Monthly budget: €1000"
			android:textColor="#2E3235"
			android:textSize="12dp"
			android:textStyle="normal"
			android:paddingTop="2dp"
			android:paddingLeft="5dp">
		</TextView>
		<TextView
			android:id="@+id/mbBalanceRemaining"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#2E3235"
			android:text="Monthly budget left: €600"
			android:textSize="12dp"
			android:paddingTop="2dp"
			android:paddingRight="5dp"
			android:gravity="right">
		</TextView>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/mbBalanceSpent"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#2E3235"
			android:text="Monthly expenses: €400"
			android:textSize="12dp"
			android:paddingTop="2dp"
			android:paddingLeft= "5dp">
		</TextView>
		<TextView
			android:id="@+id/mbBalanceRate"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#2E3235"
			android:text="Spend rate per day: €13.11"
			android:textSize="12dp"
			android:paddingTop="2dp"
			android:paddingRight="5dp"
			android:gravity="right">
		</TextView>
	</LinearLayout>	
		<TextView
		
		android:id="@+id/listHeader"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Recent transactions"
		android:textColor="#2E3235"
		android:textSize="20dp"
		android:textStyle="bold"
		android:paddingTop="7dp"></TextView>
	
	<ListView
		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@android:id/list"
		android:choiceMode="singleChoice"
		android:fastScrollEnabled="true"
		android:textColor="#000000"
	/>
	<RadioGroup
		android:id="@+id/widget31"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
	>
	</RadioGroup>
	
</TableLayout>
